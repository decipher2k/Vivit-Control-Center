<Window x:Class="Vivit_Control_Center.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vivit_Control_Center"
        xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Vivit Control Center" Height="600" Width="1024"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        WindowStyle="None" ResizeMode="CanResize">
    <WindowChrome.WindowChrome>
        <wc:WindowChrome CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0" ResizeBorderThickness="5" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <!-- ScrollBar Button Style (für Pfeile oben/unten) -->
        <Style x:Key="ScrollBarButton" TargetType="RepeatButton">
            <Setter Property="Background" Value="#D0D0D0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Path x:Name="Arrow"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Fill="Black"
                                  Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar Thumb Style -->
        <Style x:Key="ScrollBarThumb" TargetType="Thumb">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Margin="1"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Vertical ScrollBar Style -->
        <Style x:Key="SidebarScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>

                            <!-- Track Background -->
                            <Border Grid.RowSpan="3" Background="#D0D0D0" CornerRadius="3"/>

                            <!-- Up Button - Pfeil zeigt nach oben -->
                            <RepeatButton Grid.Row="0"
                                          Style="{StaticResource ScrollBarButton}"
                                          Command="ScrollBar.LineUpCommand"
                                          Content="M 0 4 L 3 1 L 6 4 Z"/>

                            <!-- Track mit Thumb - IsDirectionReversed="True" für korrekte Scroll-Richtung -->
                            <Track Grid.Row="1" Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>

                            <!-- Down Button - Pfeil zeigt nach unten -->
                            <RepeatButton Grid.Row="2"
                                          Style="{StaticResource ScrollBarButton}"
                                          Command="ScrollBar.LineDownCommand"
                                          Content="M 0 1 L 3 4 L 6 1 Z"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="Padding" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Trennlinie in der Sidebar -->
        <Style x:Key="SidebarSeparatorStyle" TargetType="Separator">
            <Setter Property="Margin" Value="0,12,0,12"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="{TemplateBinding Background}" Height="{TemplateBinding Height}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Bar Button Style -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#222222"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseTitleBarButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C42B1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Custom Title Bar -->
        <Border x:Name="CustomTitleBar" Grid.Row="0" Grid.ColumnSpan="2" Background="Black" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleTextBlock" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="13"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="MinButton" Style="{StaticResource TitleBarButtonStyle}" Click="MinButton_Click" ToolTip="Minimize">
                        <TextBlock Text="─" FontSize="14" Margin="0,-2,0,0"/>
                    </Button>
                    <Button x:Name="MaxButton" Style="{StaticResource TitleBarButtonStyle}" Click="MaxButton_Click" ToolTip="Maximize or Restore">
                        <TextBlock x:Name="MaxIcon" Text="□" FontSize="12"/>
                    </Button>
                    <Button x:Name="CloseButton" Style="{StaticResource CloseTitleBarButtonStyle}" Click="CloseButton_Click" ToolTip="Close">
                        <TextBlock Text="✕" FontSize="12"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar -->
        <Border x:Name="SidebarRoot" Grid.Row="1" Grid.Column="0" Background="#1E1E1E" BorderBrush="#2A2A2A" BorderThickness="0,0,1,0">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Bottom" Background="#252525" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0" >
                    <Button Style="{StaticResource SidebarButtonStyle}" Tag="Launch" Click="SidebarButton_Click" ToolTip="Launch" Margin="6,4">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="🚀" FontFamily="Segoe UI Emoji" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Launch" FontSize="9" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource SidebarButtonStyle}" Tag="__reboot" Click="RebootArea_Click" ToolTip="Reboot / Shutdown" Margin="6,4">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="⏻" FontFamily="Segoe UI Symbol" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Power" FontSize="9" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource SidebarScrollBar}"/>
                    </ScrollViewer.Resources>
                    <StackPanel Margin="0">
                        <!-- Buttons (unverändert) -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="AI" ToolTip="AI">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🤖" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="AI" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="News" ToolTip="News">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📰" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="News" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Messenger" ToolTip="Messenger">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📨" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Messenger" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Chat" ToolTip="Chat">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="💬" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Chat" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SidebarSeparatorStyle}"/>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Explorer" ToolTip="Explorer">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📁" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Explorer" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Office" ToolTip="Office">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📄" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Office" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Notes" ToolTip="Notes">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📝" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Notes" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Media Player" ToolTip="Media Player">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🎵" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text=" Media Player " FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Steam" ToolTip="Steam">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🎮" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Steam" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SidebarSeparatorStyle}"/>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Social" ToolTip="Social">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="👥" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Social" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Webbrowser" ToolTip="Webbrowser">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🌐" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Webbrowser" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Order Food" ToolTip="Order Food">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🍔" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Order Food" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="eBay" ToolTip="eBay">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🛍️" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="eBay" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Temu" ToolTip="Temu">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📦" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Temu" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SidebarSeparatorStyle}"/>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Terminal" ToolTip="Terminal">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🖥️" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Terminal" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Scripting" ToolTip="Scripting">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📜" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Scripting" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="SSH" ToolTip="SSH">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="🔐" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="SSH" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="SFTP" ToolTip="SFTP">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="📤" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="SFTP" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SidebarSeparatorStyle}"/>

                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click" Tag="Settings" ToolTip="Settings">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,4,0,4">
                                <TextBlock Text="⚙️" FontFamily="Segoe UI Emoji" FontSize="21" HorizontalAlignment="Center"/>
                                <TextBlock Text="Settings" FontSize="9" Margin="0,6,0,0" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Module-Host -->
        <Grid x:Name="ModuleHost"
              Grid.Row="1"
              Grid.Column="1"
              Background="White"
              Panel.ZIndex="-1"/>

        <!-- Splash Overlay (deckt nur den Modulbereich ab) -->
        <Border x:Name="SplashOverlay"
                Grid.Row="1"
                Grid.Column="1"
                Background="#CC000000"
                Visibility="Visible"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
                <TextBlock Text="{DynamicResource App.LoadingModules}" Foreground="#FFFFFF" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,8"/>

                <!-- Fortschrittsanzeige: X von Y Modulen geladen -->
                <TextBlock x:Name="LoadProgressText" Text="0" Foreground="#B0B0B0" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,12"/>

                <ProgressBar x:Name="LoadProgressBar"
                             Height="6"
                             Minimum="0"
                             Maximum="19"
                             Value="0"
                             Foreground="#FFFFFF"
                             Background="#333333"/>

                <TextBlock Text="{DynamicResource App.PendingModules}" Foreground="#D0D0D0" FontSize="12" Margin="0,12,0,4"/>
                <ItemsControl x:Name="PendingList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="#B0B0B0" FontSize="12"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
