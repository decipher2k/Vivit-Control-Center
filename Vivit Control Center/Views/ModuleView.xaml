<UserControl x:Class="Vivit_Control_Center.Views.ModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="200" MinHeight="200">
    <Grid Background="#181818">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#202020" Padding="16,12" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
            <TextBlock x:Name="TitleText"
                       Text="Module"
                       Foreground="#FFFFFF"
                       FontSize="20"
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Content Area (skaliert automatisch) -->
        <Grid Grid.Row="1" Margin="16">
            <Border CornerRadius="8" Background="#222" BorderBrush="#2A2A2A" BorderThickness="1">
                <Viewbox Stretch="Uniform" StretchDirection="Both">
                    <TextBlock Text="Inhalt des Moduls"
                               Foreground="#BBBBBB"
                               FontSize="24"
                               FontWeight="Light"
                               TextAlignment="Center"
                               Padding="20"/>
                </Viewbox>
            </Border>
        </Grid>
    </Grid>
</UserControl>