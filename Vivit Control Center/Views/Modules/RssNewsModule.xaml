<modules:BaseSimpleModule x:Class="Vivit_Control_Center.Views.Modules.RssNewsModule" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:modules="clr-namespace:Vivit_Control_Center.Views.Modules" Background="White">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="360"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Border Background="#F4F4F4" BorderBrush="#DDD" BorderThickness="0,0,1,0" Padding="6">
			<DockPanel>
				<TextBox x:Name="txtFilter" Margin="0,0,0,6" DockPanel.Dock="Top"/>
				<ListBox x:Name="lstArticles" SelectionChanged="lstArticles_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch">
					<ListBox.GroupStyle>
						<GroupStyle>
							<GroupStyle.HeaderTemplate>
								<DataTemplate>
									<Border Background="#E0E0E0" Padding="4" Margin="0,0,0,4" CornerRadius="4">
										<TextBlock Text="{Binding Name}" FontWeight="Bold" />
									</Border>
								</DataTemplate>
							</GroupStyle.HeaderTemplate>
							<GroupStyle.Panel>
								<ItemsPanelTemplate>
									<StackPanel />
								</ItemsPanelTemplate>
							</GroupStyle.Panel>
						</GroupStyle>
					</ListBox.GroupStyle>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Border Padding="4" Margin="0,0,0,6" Background="White" CornerRadius="4" BorderBrush="#DDD" BorderThickness="1" MinHeight="80" HorizontalAlignment="Stretch">
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="64"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Image Width="64" Height="64" Margin="0,0,8,0" Source="{Binding Image}" Stretch="UniformToFill"/>
									<StackPanel Grid.Column="1" VerticalAlignment="Top">
										<TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="WrapWithOverflow" TextTrimming="CharacterEllipsis" MaxWidth="260" />
										<TextBlock Text="{Binding PublishDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" FontSize="11" Foreground="#666"/>
										<TextBlock Text="{Binding Source}" FontSize="11" Foreground="#999"/>
									</StackPanel>
								</Grid>
							</Border>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</DockPanel>
		</Border>
		<Grid Grid.Column="1" Background="White">
			<ScrollViewer x:Name="articleScroll" Margin="0" Padding="16" VerticalScrollBarVisibility="Auto">
				<StackPanel>
					<TextBlock x:Name="txtArticleTitle" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,12"/>
					<TextBlock x:Name="txtArticleMeta" FontSize="11" Foreground="#666" Margin="0,0,0,16"/>
					<Image x:Name="imgArticle" MaxHeight="240" Stretch="Uniform" Margin="0,0,0,16" Visibility="Collapsed"/>
					<TextBlock x:Name="txtArticleContent" TextWrapping="Wrap"/>
				</StackPanel>
			</ScrollViewer>
		</Grid>
	</Grid>
</modules:BaseSimpleModule>