<Window x:Class="Vivit_Control_Center.Views.Modules.ProgramsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programme" Height="440" Width="620" WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" LastChildFill="True">
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" Margin="8,0,0,0" Width="140">
                <Button Content="Hinzufügen" Margin="0,0,0,6" Click="Add_Click"/>
                <Button Content="Entfernen" Margin="0,0,0,6" Click="Remove_Click"/>
                <Button Content="Speichern" Margin="0,0,0,6" Click="Save_Click"/>
                <Button Content="Schließen" Click="Close_Click"/>
            </StackPanel>
            <DataGrid x:Name="dgPrograms" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" Margin="0,0,8,0" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Pfad" Binding="{Binding Path}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Caption" Binding="{Binding Caption, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <TextBlock Grid.Row="1" Text="Doppelklick auf Pfad öffnet Ordner" FontSize="11" Foreground="Gray" Margin="0,6,0,0"/>
    </Grid>
</Window>