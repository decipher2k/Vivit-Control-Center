<modules:BaseSimpleModule x:Class="Vivit_Control_Center.Views.Modules.SocialModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:modules="clr-namespace:Vivit_Control_Center.Views.Modules"
    Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="8" Grid.Row="0">
            <TextBlock Text="Social Network:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="cmbSocial" Width="220" SelectionChanged="cmbSocial_SelectionChanged">
                <ComboBoxItem Content="Facebook"/>
                <ComboBoxItem Content="X.com"/>
                <ComboBoxItem Content="Bluesky"/>
                <ComboBoxItem Content="Fediverse"/>
            </ComboBox>
        </DockPanel>
        <ContentControl Grid.Row="1" x:Name="BrowserHost" />
    </Grid>
</modules:BaseSimpleModule>
