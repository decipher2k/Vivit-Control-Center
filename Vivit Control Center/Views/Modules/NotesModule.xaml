<modules:BaseSimpleModule
    x:Class="Vivit_Control_Center.Views.Modules.NotesModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:modules="clr-namespace:Vivit_Control_Center.Views.Modules"
    Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top toolbar spanning all columns -->
        <ToolBarTray Grid.Row="0" Grid.ColumnSpan="3">
            <ToolBar>
                <Button Padding="6,2" Click="Bold_Click"><TextBlock Text="B" FontWeight="Bold"/></Button>
                <Button Padding="6,2" Click="Italic_Click"><TextBlock Text="I" FontStyle="Italic"/></Button>
                <Button Padding="6,2" Click="Underline_Click"><TextBlock Text="U" TextDecorations="Underline"/></Button>
                <Separator/>
                <Button Padding="6,2" Click="Bullets_Click" Content="{DynamicResource Notes.Bullets}"/>
                <Button Padding="6,2" Click="Numbering_Click" Content="{DynamicResource Notes.Numbered}"/>
                <Separator/>
                <Button Padding="6,2" Click="AlignLeft_Click" Content="{DynamicResource Notes.AlignLeft}"/>
                <Button Padding="6,2" Click="AlignCenter_Click" Content="{DynamicResource Notes.AlignCenter}"/>
                <Button Padding="6,2" Click="AlignRight_Click" Content="{DynamicResource Notes.AlignRight}"/>
                <Separator/>
                <TextBlock Text="{DynamicResource Notes.FontSize}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <ComboBox x:Name="cmbFontSize" Width="70" SelectionChanged="cmbFontSize_SelectionChanged">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="24"/>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>

        <!-- Left: Topics tree -->
        <Grid Grid.Row="1" Grid.Column="0">
            <TreeView x:Name="tvTopics" SelectedItemChanged="tvTopics_SelectedItemChanged">
                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{DynamicResource Notes.Context.New}" Click="AddTopic_Click"/>
                        <MenuItem Header="{DynamicResource Notes.Context.Rename}" Click="RenameTopic_Click"/>
                        <MenuItem Header="{DynamicResource Notes.Context.Delete}" Click="DeleteTopic_Click"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource Notes.Context.Up}" Click="MoveUp_Click"/>
                        <MenuItem Header="{DynamicResource Notes.Context.Down}" Click="MoveDown_Click"/>
                    </ContextMenu>
                </TreeView.ContextMenu>
            </TreeView>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FFE5E5E5"/>

        <!-- Right: Rich text editor -->
        <Grid Grid.Row="1" Grid.Column="2">
            <RichTextBox x:Name="rtbEditor" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Segoe UI" FontSize="12" TextChanged="rtbEditor_TextChanged" LostFocus="rtbEditor_LostFocus"/>
        </Grid>
    </Grid>
</modules:BaseSimpleModule>
