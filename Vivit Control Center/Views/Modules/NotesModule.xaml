<modules:BaseSimpleModule
    x:Class="Vivit_Control_Center.Views.Modules.NotesModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:modules="clr-namespace:Vivit_Control_Center.Views.Modules">
    <Grid>
        <Grid.Resources>
            <!-- Dark ComboBox (local) -->
            <Style x:Key="NotesDarkComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                <Setter Property="Background" Value="{StaticResource DarkControlBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource DarkForegroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource DarkBorderBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="3"/>
                                <DockPanel>
                                    <ToggleButton x:Name="DropDownToggle"
                                                  DockPanel.Dock="Right"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  Focusable="False"
                                                  Background="{StaticResource DarkControlBrush}"
                                                  BorderBrush="{StaticResource DarkBorderBrush}"
                                                  Width="20"
                                                  Padding="0">
                                        <Path Data="M 0 0 L 8 0 L 4 4 Z"
                                              Fill="{StaticResource DarkForegroundBrush}"
                                              Stretch="Uniform"
                                              Width="8" Height="6"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    <ContentPresenter Margin="6,2,4,2"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      RecognizesAccessKey="True"/>
                                </DockPanel>
                                <Popup x:Name="PART_Popup"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       Placement="Bottom"
                                       AllowsTransparency="True"
                                       Focusable="False">
                                    <Border Background="{StaticResource DarkControlBrush}"
                                            BorderBrush="{StaticResource DarkBorderBrush}"
                                            BorderThickness="1">
                                        <ScrollViewer CanContentScroll="True">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="NotesDarkComboBoxItem" TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                <Setter Property="Background" Value="{StaticResource DarkControlBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource DarkForegroundBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource DarkBorderBrush}"/>
                <Style.Triggers>
                    <Trigger Property="IsHighlighted" Value="True">
                        <Setter Property="Background" Value="{StaticResource DarkControlHoverBrush}"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource DarkSelectionBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Dark TreeViewItem -->
            <Style x:Key="NotesTreeViewItem" TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                <Setter Property="Foreground" Value="{StaticResource DarkForegroundBrush}"/>
                <Setter Property="Background" Value="{StaticResource DarkControlBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource DarkBorderBrush}"/>
                <Setter Property="Padding" Value="2"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource DarkSelectionBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource DarkControlHoverBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top toolbar spanning all columns -->
        <ToolBarTray Grid.Row="0" Grid.ColumnSpan="3">
            <ToolBar>
                <Button Padding="6,2" Click="Bold_Click"><TextBlock Text="B" FontWeight="Bold"/></Button>
                <Button Padding="6,2" Click="Italic_Click"><TextBlock Text="I" FontStyle="Italic"/></Button>
                <Button Padding="6,2" Click="Underline_Click"><TextBlock Text="U" TextDecorations="Underline"/></Button>
                <Separator/>
                <Button Padding="6,2" Click="Bullets_Click" Content="{DynamicResource Notes.Bullets}"/>
                <Button Padding="6,2" Click="Numbering_Click" Content="{DynamicResource Notes.Numbered}"/>
                <Separator/>
                <Button Padding="6,2" Click="AlignLeft_Click" Content="{DynamicResource Notes.AlignLeft}"/>
                <Button Padding="6,2" Click="AlignCenter_Click" Content="{DynamicResource Notes.AlignCenter}"/>
                <Button Padding="6,2" Click="AlignRight_Click" Content="{DynamicResource Notes.AlignRight}"/>
                <Separator/>
                <TextBlock Text="{DynamicResource Notes.FontSize}" VerticalAlignment="Center" Margin="8,0,4,0"/>
                <ComboBox x:Name="cmbFontSize" Width="70" SelectionChanged="cmbFontSize_SelectionChanged"
                          Style="{StaticResource NotesDarkComboBox}"
                          ItemContainerStyle="{StaticResource NotesDarkComboBoxItem}">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="24"/>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>

        <!-- Left: Topics tree -->
        <Grid Grid.Row="1" Grid.Column="0">
            <TreeView x:Name="tvTopics" SelectedItemChanged="tvTopics_SelectedItemChanged"
                      Background="{StaticResource DarkControlBrush}"
                      BorderBrush="{StaticResource DarkBorderBrush}"
                      ItemContainerStyle="{StaticResource NotesTreeViewItem}">
                <TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{DynamicResource Notes.Context.New}" Click="AddTopic_Click"/>
                        <MenuItem Header="{DynamicResource Notes.Context.Rename}" Click="RenameTopic_Click"/>
                        <MenuItem Header="{DynamicResource Notes.Context.Delete}" Click="DeleteTopic_Click"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource Notes.Context.Up}" Click="MoveUp_Click"/>
                        <MenuItem Header="{DynamicResource Notes.Context.Down}" Click="MoveDown_Click"/>
                    </ContextMenu>
                </TreeView.ContextMenu>
            </TreeView>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

        <!-- Right: Rich text editor -->
        <Grid Grid.Row="1" Grid.Column="2">
            <RichTextBox x:Name="rtbEditor" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Segoe UI" FontSize="12" TextChanged="rtbEditor_TextChanged" LostFocus="rtbEditor_LostFocus"
                         Background="{StaticResource DarkControlBrush}"
                         Foreground="{StaticResource DarkForegroundBrush}"
                         BorderBrush="{StaticResource DarkBorderBrush}"
                         CaretBrush="{StaticResource DarkForegroundBrush}"/>
        </Grid>
    </Grid>
</modules:BaseSimpleModule>
